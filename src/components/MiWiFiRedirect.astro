---
/**
 * Componente de “landing corta” para MiWiFi.
 * Props opcionales por si quieres reutilizar con otros textos/imágenes.
 */
const {
  title = "MiWiFi",
  highlight = "marketing Wi-Fi",
  description = "Convierte el acceso Wi-Fi en una herramienta de marketing: portal cautivo, captación de leads, analítica y campañas.",
  bg = "/images/miwifi-hero.jpg",          // pon tu imagen en public/images/
  ctaHref = "/MiWifi#miwifi",               // destino de la página completa
  ctaText = "Conoce MiWiFi"
} = Astro.props;
---

<section class="relative h-screen w-screen bg-black text-white overflow-hidden flex items-center justify-center">
  <!-- Fondo -->
  <img src={bg} alt="MiWiFi" class="absolute inset-0 w-full h-full object-cover opacity-30" />
  <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/20 to-black"></div>

  <!-- Contenido -->
  <div class="relative z-10 text-center px-6 max-w-4xl">
    <h1 class="text-4xl md:text-6xl font-bold leading-tight">
      {title}: <span class="text-emerald-400">{highlight}</span>
    </h1>
    <p class="mt-4 text-lg md:text-xl text-white/85 max-w-3xl mx-auto">
      {description}
    </p>

    <a
      href={ctaHref}
      class="mt-8 inline-block border border-emerald-400 text-emerald-400 px-8 py-3 text-lg font-semibold rounded-md
             hover:bg-emerald-400 hover:text-black transition-colors duration-300"
    >
      {ctaText}
    </a>
  </div>
</section>
